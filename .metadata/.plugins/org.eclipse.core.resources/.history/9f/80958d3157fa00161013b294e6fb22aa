import pygame

pygame.init()
pygame.joystick.init()

class JoystickReader():
    
    def __init__(self):
        self.axis_x1 = 0.0
        self.axis_y1 = 0.0
        self.axis_x2 = 0.0
        self.axis_y2 = 0.0
        self.axis_lt = 0.0
        self.axis_rt = 0.0
        
        self.btn_a = False
        self.btn_b = False
        self.btn_x = False
        self.btn_y = False
        

if __name__ == "__main__":
